<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">

	<resultMap id="resultMapGuestbookVo" type="com.javaex.vo.GuestbookVo">
		<result column="reg_date" property="regDate"/>
	</resultMap>
	
	<!-- g리스트 가져오기 -->
	<select id="getgList" resultMap="resultMapGuestbookVo">
		<![CDATA[
			select  no,
	        		name,
	        		password,
	        		content,
	        		reg_date
			from guestbook
			order by no desc
		]]>
	</select>	
	
	<!-- 방명록 등록 -->
	<insert id="gInsert" parameterType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			insert into guestbook
			values (seq_guestbook_no.nextval,
					#{name},
					#{password},
					#{content},
					sysdate
			)
		]]>
	</insert>
	
	<!-- 방명록 삭제 -->
	<delete id="gDelete" parameterType="com.javaex.vo.GuestbookVo">
		<![CDATA[ 
			delete from guestbook
			where no=#{no}
			and password = #{password}
		]]>
	</delete>
	
	
</mapper>